    script(src='style/form/vendor/jquery/jquery-3.2.1.min.js')
    // ===============================================================================================
    script(src='style/form/vendor/animsition/js/animsition.min.js')
    // ===============================================================================================
    script(src='style/form/vendor/bootstrap/js/popper.js')
    script(src='style/form/vendor/bootstrap/js/bootstrap.min.js')
    // ===============================================================================================
    script(src='style/form/vendor/select2/select2.min.js')
    // ===============================================================================================
    script(src='style/form/vendor/daterangepicker/moment.min.js')
    script(src='style/form/vendor/daterangepicker/daterangepicker.js')
    // ===============================================================================================
    script(src='style/form/vendor/countdowntime/countdowntime.js')
    // ===============================================================================================
    script(src='style/form/js/main.js')
